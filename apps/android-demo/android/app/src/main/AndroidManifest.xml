<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">
    
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@android:style/Theme.NoTitleBar.Fullscreen">

        <activity
            android:name="android.app.NativeActivity"
            android:exported="true"
            android:configChanges="orientation|keyboardHidden"
            android:screenOrientation="portrait">

            <!--
                IMPORTANT: android.app.lib_name MUST match the cdylib name produced by cargo.
                For package name "desktop-app", cargo creates libdesktop_app.so (hyphens â†’ underscores).
                Android converts this lib_name value to lib{value}.so, so use "desktop_app" here.
                If you rename the Rust crate, you MUST update this value to match.
            -->
            <meta-data
                android:name="android.app.lib_name"
                android:value="desktop_app" />

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>
